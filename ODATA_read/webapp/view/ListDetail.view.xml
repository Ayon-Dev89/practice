<mvc:View controllerName="satya.prasad.mvcapp.controller.ListDetail" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Page title="Product Details">
		<content>
			<Panel headerText="Product Details">
				<l:Grid>
					<Text text="{ODATA>ProductID}"></Text>
					<Text text="{ODATA>Name}"></Text>
					<Text text="{ODATA>Description}"></Text>
					<Text text="{ODATA>Price}"></Text>
				</l:Grid>
			</Panel>
		</content>
	</Page>
</mvc:View>